@model Product

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@Model.ImagePath" alt="" />
        <div class="caption">
            <h3 class="pull-right">@Model.UnitPrice.ToString()</h3>
            <h3>
                <a>@Model.ProductName</a>
            </h3>
            <p>@Model.Description</p>
        </div>
        <div class="addToCart text-right">
            <p class="button ">
                <a class="btn btn-success" id="cartButton" 
                   asp-controller="ShoppingCart" 
                   asp-action="AddToShoppingCart"
                   asp-route-productId="@Model.ProductId">
                    Add to cart
                </a>
            </p>
        </div>
    </div>
</div>